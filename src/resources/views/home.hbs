<div class="container-fluid content-home pd-ct">
    <div class="bar-search pd-search-bar">

        <form class="search-input d-flex" method="GET" action="/me/search">
        <input type="text" class="form-control" name="q" id="basic-url" aria-describedby="basic-addon3">
        <button type="submit" class="btn-danger">Tìm kiếm</button>
        </form>
    </div>

      <div class="mt-5 phimmoi">
          <div class="row pb-5">
              <div class="col-xxl-9 col-xl-9 col-lg-9 col-md-12 col-sm-12">
                  <div class="d-flex justify-content-between align-items-center">
                        <div class="Catogary-phimbo">PHIM MỚI</div>
                   <div class="Catogary-sort">
                     
                       <button class="sort-item sort-active">Phim mới</button>
                       <button class="sort-item">Sắp chiếu</button>
                  </div>
                  </div>
                         <div class="d-flex justify-content-end mt-2">
                        
                       </div>
                   <div>
                       <div class="row mt-2">
                           
                           {{#each data}}
                           <div class="col-xxl-3 col-xl-3 col-lg-3 col-md-3 col-sm-4 img-phim mb-3 pd-home mobile-center">
                               <div class="img-movie">
                                   <a href="/me/{{this.slug}}" class="img-a-movie">
                                  
                                        <div class="img-mark">
                                            <div class="content-mark fw-bold text-center">
                                                {{this.mark}}
                                            </div>
                                        </div>
                               
                                   
                                   <img src="{{this.image}}" alt="">
                                   
                                   </a>
                               </div>
                                <div class="rate-movie d-flex mt-2 mobile-flex-center">
                                    <i class="fas fa-star star-active"></i>
                                    <i class="fas fa-star star-active"></i>
                                    <i class="fas fa-star star-active"></i>
                                    <i class="fas fa-star star-active"></i>
                                    <i class="fas fa-star star-active"></i>
                                </div>
                               <div class="text-light text-name text-left">
                                   <a href="/me/{{this.slug}}">
                        
                                   {{this.name}}
                                   </a>
                                   
                                   </div>
                                <div class="hashtag" ><i class="far fa-hourglass text-danger"></i> {{timePlay}} phút </div> 
                           </div>
                          {{/each}}
                       </div>
                      
       
                   </div>
              </div>

              <div class="col-xxl-3 col-xl-3 col-lg-3 col-md-0 col-sm-0 phimhot" > <!-- Phim bộ hot-->
                  <div class="Catogary-phimscroll Catogary-phimbo fs-5">PHIM BỘ MỚI</div>
                  <div class="scrollmove">
                    {{#each dataphimbo}}
                      <div class="scrollhot d-flex justify-content-evenly">
                      <div class="img-scroll">
                          <img src="{{this.image}}">
                      </div>
                        <div class="w-100 d-flex flex-column align-items-center justify-content-evenly">

                     
                      <div class="w-75 text-light ">
                         <div>{{this.name}}</div> 
                            <div class="hashtag" ><i class="far fa-hourglass text-danger"></i> {{timePlay}} phút </div> 
                     </div>
                     
                         <div class="rate-movie d-flex mt-2 w-75">
                                    <i class="fas fa-star star-active"></i>
                                    <i class="fas fa-star star-active"></i>
                                    <i class="fas fa-star star-active"></i>
                                    <i class="fas fa-star star-active"></i>
                                    <i class="fas fa-star star-active"></i>
                        </div>
                     
                        </div>
                        </div>
                    {{/each}}

                  </div>
                  
              </div>
          </div>
     
         <div class="row pb-5">
              <div class="col-xxl-9 col-xl-9 col-lg-9 col-md-12 col-sm-12">
                  <div class="d-flex justify-content-between align-items-center">
                        <div class="Catogary-phimbo">PHIM LẺ</div>
                   <div class="Catogary-sort">
                 
                       <button class="sort-item sort-active">Phim mới</button>
                       <button class="sort-item">Sắp chiếu</button>
                   </div>
                  </div>
                         <div class="d-flex justify-content-end mt-2">
                       
                       </div>
                   <div>
                       <div class="row mt-2">
                           
                           {{#each dataphimle}}
                           <div class="col-xxl-3 col-xl-3 col-lg-3 col-md-3 col-sm-4 img-phim mb-3 pd-home mobile-center">
                               <div class="img-movie">
                                   <a href="/me/{{this.slug}}" class="img-a-movie">
                                     <div class="img-mark">
                                            <div class="content-mark fw-bold text-center">
                                                {{this.mark}}
                                            </div>
                                        </div>
                                   <img src="{{this.image}}" alt="">
                                   </a>
                               </div>
                                <div class="rate-movie d-flex mt-2 mobile-flex-center">
                                    <i class="fas fa-star star-active"></i>
                                    <i class="fas fa-star star-active"></i>
                                    <i class="fas fa-star star-active"></i>
                                    <i class="fas fa-star star-active"></i>
                                    <i class="fas fa-star star-active"></i>
                                </div>  
                               <div class="text-name">
                                   <a href="/me/{{this.slug}}">

                                   {{this.name}}
                                   </a>
                                   
                                   </div>
                                <div class="hashtag" ><i class="far fa-hourglass text-danger"></i> {{timePlay}} phút </div> 
                           </div>
                          {{/each}}
                       </div>
                      
       
                   </div>
              </div>

              <div class="col-xxl-3 col-xl-3 col-lg-3 col-md-0 col-sm-0 phimhot" > <!-- Phim lẻ hot-->
                  <div class="Catogary-phimscroll Catogary-phimbo fs-5">PHIM LẺ HOT</div>
                  <div class="scrollmove">
                      {{#each dataphimle}}
                      <div class="scrollhot d-flex justify-content-evenly">
                      <div class="img-scroll">
                          <img src="{{this.image}}">
                      </div>
                        <div class="w-100 d-flex flex-column align-items-center justify-content-evenly">

                     
                      <div class="w-75 text-light ">
                         <div>{{this.name}}</div> 
                          <div class="hashtag" ><i class="far fa-hourglass text-danger"></i> {{timePlay}} phút </div> 
                     </div>
                     
                         <div class="rate-movie d-flex mt-2 w-75">
                                    <i class="fas fa-star star-active"></i>
                                    <i class="fas fa-star star-active"></i>
                                    <i class="fas fa-star star-active"></i>
                                    <i class="fas fa-star star-active"></i>
                                    <i class="fas fa-star star-active"></i>
                        </div>
                     
                        </div>
                        </div>
                    {{/each}}
                        
                  </div>
                  
              </div>
          </div>
      </div>

</div>